<odoo>
    <data>
        <record id="stock_picking_form_waybill_improvment" model="ir.ui.view">
            <field name="name">stock.picking.form.waybill.improvment</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field
                        name="waybill_id"
                        attrs="{'invisible': [('waybill_id', '=', False)]}"
                    />
                </xpath>
                <xpath expr="//button[@name='action_confirm']" position="before">
                    <field name="sale_id" invisible="1"/>
                    <button
                        name="action_create_waybill"
                        attrs="{'invisible': ['|', '|', 
                            ('state', '!=', 'done'),
                            ('waybill_id', '!=', False),
                            ('sale_id', '=', False)
                        ]}"
                        string="Создать накладную"
                        type="object"
                        class="oe_highlight"
                        groups="base.group_user"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>